<div class="row">
    <div class="col-md-12" class="table-responsive">
        <h2>Departments<a href="/departments/add" class="btn btn-success pull-right">Add New Department</a></h2> 
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Department&nbsp;Number</th>
                    <th>Department&nbsp;Name</th>
                </tr>
            </thead>
            <tbody>
                {{#each departments}}
                <tr>
                    <td><a href="/employees?department={{departmentId}}"> {{departmentId}} </a></td>
                    <td><a href="/department/{{departmentId}}">{{departmentName}}</a></td>
                    <td><a class="btn btn-danger pull-right" href="/departments/delete/{{departmentId}}">Remove</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div> 
</div>